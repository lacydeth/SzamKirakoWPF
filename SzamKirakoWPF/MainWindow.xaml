<Window x:Class="SzamKirakoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SzamKirakoWPF"
        mc:Ignorable="d"
        Title="SzámKirakó.app" Height="650" Width="600">
    <Grid x:Name="grKulso">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="btnKeveres" Width="150" Height="25" Content="Keverés" Click="btnKeveres_Click"></Button>
        <ComboBox x:Name="cbMekkora" Width="150" Height="25" HorizontalAlignment="Left" SelectionChanged="cbMekkora_SelectionChanged">
            <ComboBoxItem IsSelected="True" Content="3" x:Name="cb3"></ComboBoxItem>
            <ComboBoxItem Content="4" x:Name="cb4"></ComboBoxItem>
        </ComboBox>
        <Button x:Name="btnKesz" Width="150" Height=" 25" Content="Kész" HorizontalAlignment="Right" Click="btnKesz_Click"></Button>
    </Grid>
</Window>
